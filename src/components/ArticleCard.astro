---
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';

interface Props {
	href: string;
	title: string;
	description?: string;
	pubDate: Date;
	heroImage?: ImageMetadata;
	featured?: boolean;
}

const { href, title, description, pubDate, heroImage, featured = false } = Astro.props;
---

<article class:list={['article-card', { featured }]}>
	<a href={href}>
		<div class="card-content">
			<div class="card-text">
				<p class="date">
					<FormattedDate date={pubDate} />
				</p>
				<h4 class="title">{title}</h4>
				{description && (
					<p class="description">{description}</p>
				)}
				<span class="read-more">読む →</span>
			</div>
			
			{heroImage && (
				<div class="card-image">
					<Image 
						width={180} 
						height={180} 
						src={heroImage} 
						alt={title}
						class="thumbnail"
					/>
				</div>
			)}
		</div>
	</a>
</article>

<style>
	.article-card {
		background: var(--surface);
		border: 1px solid var(--border);
		border-radius: var(--radius-md);
		overflow: hidden;
		transition: all 0.2s ease;
	}
	
	.article-card:hover {
		border-color: var(--accent);
		box-shadow: var(--shadow-md);
	}
	
	.article-card a {
		display: block;
		text-decoration: none;
		color: inherit;
	}
	
	.card-content {
		display: flex;
		align-items: stretch;
		gap: 1rem;
	}
	
	.card-text {
		flex: 1;
		padding: 1.25rem;
		display: flex;
		flex-direction: column;
	}
	
	.date {
		margin: 0 0 0.5rem 0;
		font-size: 0.875rem;
		color: var(--text-muted);
	}
	
	.title {
		margin: 0 0 0.5rem 0;
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--text-primary);
		line-height: 1.4;
		transition: color 0.2s ease;
	}
	
	.article-card:hover .title {
		color: var(--accent);
	}
	
	.description {
		margin: 0 0 0.75rem 0;
		font-size: 0.9rem;
		color: var(--text-secondary);
		line-height: 1.5;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	
	.read-more {
		margin-top: auto;
		font-size: 0.875rem;
		color: var(--accent);
		font-weight: 500;
	}
	
	.card-image {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 1rem;
		background: var(--bg);
		border-left: 1px solid var(--border-light);
	}
	
	.thumbnail {
		width: 120px;
		height: 120px;
		object-fit: cover;
		border-radius: var(--radius-sm);
	}
	
	/* Featured card */
	.featured .card-content {
		flex-direction: column;
	}
	
	.featured .card-image {
		border-left: none;
		border-top: 1px solid var(--border-light);
		padding: 1.5rem;
	}
	
	.featured .thumbnail {
		width: 100%;
		height: auto;
		max-height: 300px;
	}
	
	.featured .title {
		font-size: 1.5rem;
	}
	
	/* Responsive */
	@media (max-width: 720px) {
		.thumbnail {
			width: 100px;
			height: 100px;
		}
	}
</style>
