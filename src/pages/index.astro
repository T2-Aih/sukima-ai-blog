<style>
	main {
		max-width: 800px;
	}
	
	/* Posts Section */
	.posts {
		padding: 2rem 0;
	}
	
	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
		flex-wrap: wrap;
		gap: 1rem;
	}
	
	.section-header h1 {
		margin: 0;
		font-size: 1.75rem;
	}
	
	.badge {
		padding: 0.4rem 0.8rem;
		background: var(--accent-light);
		color: var(--accent);
		font-size: 0.8rem;
		font-weight: 600;
		border-radius: 50px;
	}
	
	.post-grid {
		display: grid;
		gap: 1rem;
	}
	
	/* Mobile first: horizontal layout (text left, visual right) */
	.post-card {
		display: flex;
		flex-direction: row;
		align-items: stretch;
		gap: 1rem;
		padding: 1rem;
		background: var(--surface);
		border: 1px solid var(--border);
		border-radius: var(--radius-md);
		text-decoration: none;
		transition: all 0.2s ease;
	}
	
	.post-card:hover {
		border-color: var(--accent);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}
	
	.post-content {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-width: 0;
	}
	
	.post-date {
		font-size: 0.75rem;
		color: var(--text-muted);
	}
	
	.post-title {
		margin: 0.25rem 0;
		font-size: 1rem;
		color: var(--text-primary);
		line-height: 1.4;
	}
	
	.post-desc {
		margin: 0.25rem 0;
		font-size: 0.85rem;
		color: var(--text-secondary);
		line-height: 1.5;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	
	.post-link {
		font-size: 0.8rem;
		color: var(--accent);
		font-weight: 500;
		margin-top: 0.25rem;
	}
	
	/* Visual illustration area (right side) */
	.post-visual {
		flex-shrink: 0;
		width: 100px;
		height: 100px;
		border-radius: var(--radius-sm);
		overflow: hidden;
		background: var(--bg);
		display: flex;
		align-items: center;
		justify-content: center;
	}
	
	.post-thumbnail {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	
	/* Desktop: larger visual */
	@media (min-width: 600px) {
		.post-card {
			padding: 1.25rem;
			gap: 1.25rem;
		}
		
		.post-title {
			font-size: 1.1rem;
		}
		
		.post-desc {
			font-size: 0.9rem;
		}
		
		.post-visual {
			width: 120px;
			height: 120px;
		}
	}
	
	/* About Brief */
	.about-brief {
		margin-top: 3rem;
		padding: 2rem 0;
		border-top: 1px solid var(--border);
	}
	
	.about-content {
		text-align: center;
		max-width: 500px;
		margin: 0 auto;
	}
	
	.about-content h3 {
		font-size: 1rem;
		color: var(--text-muted);
		font-weight: 500;
		margin-bottom: 0.75rem;
	}
	
	.about-content p {
		font-size: 0.95rem;
		color: var(--text-secondary);
		margin-bottom: 1rem;
	}
	
	.features-inline {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		flex-wrap: wrap;
		font-size: 0.85rem;
		color: var(--text-muted);
	}
	
	/* Responsive */
	@media (max-width: 720px) {
		.section-header {
			flex-direction: column;
			align-items: flex-start;
		}
		
		.features-inline {
			gap: 1rem;
		}
	}
</style>
