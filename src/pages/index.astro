<style>
	main {
		max-width: 800px;
	}
	
	/* Posts Section */
	.posts {
		padding: 2rem 0;
	}
	
	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
		flex-wrap: wrap;
		gap: 1rem;
	}
	
	.section-header h1 {
		margin: 0;
		font-size: 1.75rem;
	}
	
	.badge {
		padding: 0.4rem 0.8rem;
		background: var(--accent-light);
		color: var(--accent);
		font-size: 0.8rem;
		font-weight: 600;
		border-radius: 50px;
	}
	
	.post-grid {
		display: grid;
		gap: 1rem;
	}
	
	/* Mobile first: vertical layout */
	.post-card {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 1.25rem;
		background: var(--surface);
		border: 1px solid var(--border);
		border-radius: var(--radius-md);
		text-decoration: none;
		transition: all 0.2s ease;
	}
	
	.post-card:hover {
		border-color: var(--accent);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}
	
	/* Mobile: icons horizontal on top */
	.post-icons {
		display: flex;
		flex-direction: row;
		gap: 0.5rem;
		padding-bottom: 1rem;
		border-bottom: 1px solid var(--border-light);
	}
	
	.icon-wrapper {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		border-radius: var(--radius-sm);
		background: var(--bg);
		border: 1px solid var(--border);
		color: var(--accent);
		transition: all 0.2s ease;
	}
	
	.post-card:hover .icon-wrapper {
		border-color: var(--accent);
		background: var(--accent-light);
	}
	
	.post-content {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	
	.post-date {
		font-size: 0.8rem;
		color: var(--text-muted);
	}
	
	.post-title {
		margin: 0.5rem 0;
		font-size: 1.2rem;
		color: var(--text-primary);
		line-height: 1.4;
	}
	
	.post-desc {
		margin: 0.5rem 0;
		font-size: 0.95rem;
		color: var(--text-secondary);
		line-height: 1.6;
	}
	
	.post-link {
		font-size: 0.9rem;
		color: var(--accent);
		font-weight: 500;
	}
	
	/* Desktop: horizontal layout (icons left, text right) */
	@media (min-width: 600px) {
		.post-card {
			flex-direction: row;
			align-items: stretch;
			gap: 1.25rem;
		}
		
